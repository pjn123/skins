	<Wasabi:Checkbox id="checkbox.notishownever" x="10" y="38" text="Show Never" radioid="notishowgrp"/>
	
	<Wasabi:Checkbox id="checkbox.notishowfullscreen" x="10" y="52" text="Show in fullscreen"/>

	
	<Wasabi:Checkbox id="checkbox.notienablecover" x="10" y="70" text="Enable Cover"/>
	
