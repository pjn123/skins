	<Wasabi:Checkbox id="checkbox.notifadeinvertical" x="86" y="163" text="Vertical" radioid="notioutfade"/>
	<Wasabi:Checkbox id="checkbox.notifadeinhorizontal" x="86" y="176" text="Horizontal" radioid="notioutfade"/>
	
		
		
	<text 
		id="notiyoffset" 
		x="10" y="200" 
		w="100" h="14" 
		text="Y Offset (Pixels):"
		font="Trebuchet MS"
		align="left"
		fontsize="14"
		color="lcdtext"
		ticker="0"		
	/>
