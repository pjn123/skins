		align="left"
		fontsize="14"
		color="lcdtext"
		ticker="0"		
	/>
	
	<Wasabi:RadioGroup id="notiinfade" />	
	<Wasabi:Checkbox id="checkbox.notifadeinalpha" x="10" y="150" text="Alpha" radioid="notiinfade"/>
	<Wasabi:Checkbox id="checkbox.notifadeinvertical" x="10" y="163" text="Vertical" radioid="notiinfade"/>
	<Wasabi:Checkbox id="checkbox.notifadeinhorizontal" x="10" y="176" text="Horizontal" radioid="notiinfade"/>
	
	<text 
		id="notifadeout" 
