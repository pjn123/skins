<groupdef id="OneDirectionText" xuitag="OneDirectionText" embed_xui="my.text.main">
  <text
    id="my.text.main"
	x="0" y="0"
	w="0" h="0"
	relath="1" relatw="1"
	valign="center"
	color="lcdtext"
	shadowcolor="0,0,0"
	align="left"
	bold="0"
	timeroffstyle="0"
	
  />
  <text
    id="my.text.2"
	x="0" y="0"
	w="0" h="0"
	relath="1"
	valign="center"
	color="lcdtext"
	shadowcolor="0,0,0"
	align="left"
	bold="0"
	timeroffstyle="0"
	
  /> 
  <script id="One.Direction.Text.Script" file="OneDirectionText/OneDirectionText.maki"/>
</groupdef>