			id="text.blue" 
			x="160" y="79" 
			w="30" h="14" 
			text="0" 
			fontsize="14"
			color="lcdtext"
		/>

		<!-- brightness -->
		<rect x="8" y="94" w="176" h="12" color="0,0,0"/>
