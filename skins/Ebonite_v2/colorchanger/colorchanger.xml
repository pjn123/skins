		<rect filled="1" color="0,0,255"
			x="11" y="82" w="15" h="8"/>
			
		<Wasabi:text 
			id="text.red" 
			x="160" y="49" 
			w="30" h="14" 
			text="0" 
			fontsize="14"
			color="lcdtext"
		/>

		<Wasabi:text 
			id="text.green" 
			x="160" y="64" 
			w="30" h="14" 
			text="0" 
			fontsize="14"
