<elements>
	<bitmap id="sc.cdbox.bg" file="xui\NowPlaying\cdbox-bg_drop.png"/>
	<bitmap id="sc.cdbox.fg" file="xui\NowPlaying\cdbox-fg.png"/>
	<bitmap id="sc.cdbox.bg.ref" file="xui\NowPlaying\cdbox-bg-reflection.png"/>
	<bitmap id="sc.cdbox.ref" file="xui\NowPlaying\blank.png"/>
	
	<bitmap id="ratings.nostar" file="xui\NowPlaying\ratings-nostar.png"/>
	<bitmap id="ratings.star" file="xui\NowPlaying\ratings-star.png"/>
	<bitmap id="ratings.hover" file="xui\NowPlaying\ratings-hover.png"/>
</elements>

<groupdef id="sc.nowplaying.ratings">

	<Wasabi:Ratings
		x="0" y="0" w="150" h="22"
		image_nostar="ratings.nostar"
		image_star="ratings.star"
		image_hoverstar="ratings.hover"
	/>
</groupdef>


<groupdef id="sc.nowplaying" xuitag="SC:NowPlaying">
	<rect id="sc.nowplaying.bg"  w="0" h="0" color="255,255,255" filled="1"/>

	<SC:FadeText id="sc.nowplaying.line3" x="0" y="-4" w="0" h="30" relatw="1" fgcolor="200,200,200" align="center" font="player.font.ticker" fontsize="55" antialias="2"  bold="1" alpha="255"/>
	<SC:FadeText id="sc.nowplaying.line2" x="0" y="24" w="0" h="20" relatw="1" fgcolor="200,200,200" align="center" font="player.font.ticker" fontsize="35" alpha="250"/>
	<SC:FadeText id="sc.nowplaying.line1" x="0" y="43" w="0" h="24" relatw="1" font="player.font.ticker" fgcolor="200,200,200" alpha="235" align="center" fontsize="34"/>

	<group id="sc.nowplaying.cdbox.holder" x="5" y="90" w="-5" h="-90" relatw="1" relath="1"/>
	
	<group id="sc.nowplaying.ratings" x="0" y="68" w="150" h="22"/>

	<script file="xui\NowPlaying\NowPlaying.maki"/>
	<script file="xui\NowPlaying\albumart.maki"/>
</groupdef>

<groupdef id="sc.nowplaying.cdbox.holder">
	<group id="sc.nowplaying.cdbox" x="20" y="20" w="300" h="300"/>
	<group id="sc.nowplaying.bg.ref" x="20" y="310" w="300" h="300"/>
	<group id="sc.nowplaying.cdbox.reflection" x="20" y="310" w="300" h="300"/>

</groupdef>

<groupdef id="sc.nowplaying.cdbox" background="sc.cdbox.bg" move="1">
	<AlbumArt id="main.albumart" x="12" y="4" w="85" h="93" relatx="2" relaty="2" relatw="2" relath="2" wantfocus="1" stretched="1"/>
	<layer fitparent="1" image="sc.cdbox.fg" ghost="1" />
</groupdef>

<groupdef id="sc.nowplaying.bg.ref">
	<rect id="sc.nowplaying.bg.ref.base" x="3" y="3" w="94" h="94" relatx="2" relaty="2" relatw="2" relath="2" color="0,0,0" alpha="0" filled="1"/>
</groupdef>

<groupdef id="sc.nowplaying.cdbox.reflection" move="1" >
	<layer id="bgref" image="sc.cdbox.bg.ref" fitparent="1"/>
	<AlbumArt id="main.albumart.reflection" x="12" y="4" w="85" h="93" alpha="255" relatx="2" relaty="2" relatw="2" relath="2" wantfocus="0" stretched="1"/>
	<layer id="cdbox.fg.reflection" fitparent="1" image="sc.cdbox.fg" ghost="1" alpha="255"/>
</groupdef>