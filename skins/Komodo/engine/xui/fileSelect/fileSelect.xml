<groupdef id="fileSelectLine" xuitag="Wasabi:fileSelect" embed_xui="filename">

    <wasabi:Editbox
     id="filename"
     x="0" y="0" relatw="1" 
     w="-50" relath="1" h="0"
    />

    <wasabi:Button
     id="select" text="Browse"
     x="-50" y="0" relatx="1" 
     w="50" relath="1" h="0"
    />

    <browser
     id="filebrowse"
     x="0" y="0"
     w="0" h="0"
     scrollbars="never"
    />
    <script id="fselect.browser" param="file:///@SKINPATH@xui/fileSelect/fselect.maki" file="xui/fileSelect/script.maki"/>
</groupdef>