 		id="closegroup.background"
 		x="0" y="2"
 		w="61" h="18"
		image="player.normal.closegroup.background.bitmap"
 	/>
	<button
		id="shade"
		x="9" y="5"
		w="16" h="14"
		action="Switch" param="shade"
		image="player.normal.shade.light.bitmap"
		tooltip="Shade Mode"
		rectrgn="1"
	/>
	<button
		id="minimize"
		x="25" y="3"
		w="16" h="14"
