<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ClassicPro version="2.00" engine="two">
	
	<!--
	TextSettings:
	For a list of parameters you can change for this <text/> object:
		http://goo.gl/CrnTO
		
		Remember if your using the default values you don't have to include all the styles!
	-->
	<TextSettings>
		<!--
		CORE settings
		-->
		<Style id="normal.statusbar.text"
			fontsize="14" bold="1" 
		/>
		<Style id="normal.fileinfo.label.text"
			font="Calibri" forcelocase="1"
		/>
		<Style id="normal.fileinfo.tag.text"
			font="Calibri" bold="1"
		/>
		<Style id="normal.webreader.text"
			font="Calibri" fontsize="16"
		/>
		
			<!-- You can use y="" to align the text better if needed -->
		<Style id="normal.tab.text"
			font="Calibri" fontsize="20"
		/> 
		


		<!--
		SKIN settings
		-->
		<Style id="normal.info.title.text"
			bold="1" font="Calibri"
		/>
		<Style id="normal.info.artist.text"
			bold="1" font="Calibri"
		/>
		<Style id="normal.info.timesmall.text"
			bold="1" fontsize="15" h="16" x="100" font="Calibri"  
		/>
		<Style id="shade.songname.text"
			y="3" font="Calibri"
		/>
		<Style id="shade.news.text"
			y="3" font="Calibri"
		/>
		<Style id="shade.timebig.text"
			y="1" font="Calibri"
		/>
		<Style id="shade.timesmall.text"
			y="3" font="Calibri" fontsize="14"
		/>
		
		<!--
		Use the display param to move the text away from the right side.
		i.e. display="10" will move the text left by 10 pixels.
		The reason (if interested :P) for this work around is because the x/w position is automatically set by scripts here. (and must use an internal param so can't use clever name like width_from_side="15" ;)
		Please note that this is only applicable on the 'timebig', 'bitrate' and 'news'!
		-->
		<Style id="normal.info.timebig.text"
			bold="1" display="0" font="Calibri"
		/>
		<Style id="normal.info.news.text" 
			bold="1" display="0" font="Calibri"
		/>
		<Style id="normal.info.bitrate.text" 
			bold="1" display="0" font="Calibri"
		/>
	</TextSettings>

	<Visualization>
		<BeatVis>
			<customvis name="Bars"/>
			<customvis name="Llama"/>
			<customvis name="Nyan Cat"/>
		</BeatVis>
	</Visualization>
	
	<About:Skin>
		<Skinner
			name="Mike the Llama"
			alias="Llama"
			dob="6;1;1979"
			country="Somewhere"
			about="Thanks for using my skin!\nHere you can write more about the skin!"
		/>
	</About:Skin>

</ClassicPro>