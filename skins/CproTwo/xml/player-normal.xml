<!-- 
:: Info Section ::
-->
<groupdef id="two.info.seeker.active">
	<layer id="two.info.seeker.active.layer" x="0" y="0" w="0" relatw="1" image="info.bg.seeker.1" alpha="253"/>
	<layer id="two.info.seeker.active.light" x="0" y="0" visible="0" image="info.bg.seeker.light" alpha="253"/>
</groupdef>


<groupdef id="two.info.seeker">
	<layer id="two.info.seeker.inactive" x="0" y="0" w="0" relatw="1" image="info.bg.seeker.0"/>
	<group id="two.info.seeker.active" x="0" y="0" w="0" h="40"/>
	<layer id="two.info.seeker.finder" x="0" y="0" w="0" image="info.bg.seeker.3" alpha="200"/> <!-- Remove alpha l@r... image can do it-->
	<slider id="two.info.seeker.slider.0" x="0" y="0" w="0" h="0" relatw="1" relath="1" action="SEEK" thumb="info.seeker.thumb" interval="50"/>
	<slider id="two.info.seeker.slider.1" x="0" y="0" w="0" h="0" relatw="1" relath="1" action="SEEK" thumb="info.seeker.thumb" cursor="IDC_HAND"/>

	<text id="two.info.text.title" x="0" y="0" w="0" h="24" relatw="1" align="center" text="Long Way Home [Steve Murano Remix]" fontsize="20" color="black" ghost="1" font="Calibri"/>
	<text id="two.info.text.artist" x="0" y="20" w="0" h="16" relatw="1" align="center" text="by ATB" fontsize="16" color="black" ghost="1" font="Calibri" alpha="150"/>
	<script file="scripts/info-seeker.maki"/>
</groupdef>
<groupdef id="two.info.text.time">
	<text id="two.info.text.tracktime" x="0" y="2" w="48" h="20" align="center" valign="center" text="" fontsize="22" color="black" font="Calibri"/>
	<text id="two.info.text.totaltime" x="0" y="18" w="48" h="20" align="center" valign="center" text="" fontsize="16" color="black" font="Calibri" alpha="150"/>
	<text id="two.info.text.trackevent" x="0" y="0" w="0" h="0" display="TIME" visible="0"/>
</groupdef>
<groupdef id="two.info.text.other">
	<text id="two.info.text.other.kbps" x="0" y="3" w="52" h="12" align="center" valign="center" text="" fontsize="14" color="black" font="Calibri"/>
	<text id="two.info.text.other.size" x="0" y="13" w="52" h="12" align="center" valign="center" text="" fontsize="14" color="black" font="Calibri"/>
	<text id="two.info.text.other.hz" x="0" y="23" w="52" h="12" align="center" valign="center" text="" fontsize="14" color="black" font="Calibri"/>
</groupdef>
<groupdef id="two.info" h="40">
	<layer id="two.info.time" x="0" y="0" image="info.bg.time" regionop="1"/>
	<group id="two.info.seeker" x="56" y="0" w="-112" h="0" relatw="1" relath="1"/>
	<layer x="-56" y="0" relatx="1" image="info.bg.other" regionop="1"/>

	<group id="two.info.text.time" x="0" y="0" w="64" h="40"/>

	<group id="two.info.text.other" x="-56" y="0" w="52" h="40" relatx="1" visible="0"/>

	<layer id="two.info.pbstatus" x="0" y="0" image="info.bg.time.stop" visible="0"/>

	<script file="scripts/info-pbstatus.maki"/>
	<script file="scripts/info-text.maki"/>
</groupdef>


<!-- 
:: Playback Section ::
-->
<groupdef id="two.playback.vis" w="91">
	<vis
		id="main.vis"
		x="6" y="6"
		w="71" h="17"
		gammagroup="n.Vis"
	/>
</groupdef>
<groupdef id="two.playback.volume">
	<layer id="two.playback.volume.left" x="-113" y="0" relatx="1" image="playback.bg.right.mute"/>
	<slider x="-80" y="0" w="76" h="30" relatx="1" action="VOLUME" thumb="playback.volume.big.1" hoverthumb="playback.volume.big.2" downthumb="playback.volume.big.3" cursor="IDC_HAND"/>
</groupdef>
<groupdef id="two.playback.buttons.volume" w="67" h="30">
	<slider x="4" y="0" w="58" h="30" action="VOLUME" thumb="playback.volume.small.1" hoverthumb="playback.volume.small.2" downthumb="playback.volume.small.3" cursor="IDC_HAND"/>
</groupdef>
<groupdef id="two.playback.buttons.shufrep" w="67" h="30">
	<NStatesButton x="0" y="0" image="playback.button.shuf.1." hoverimage="playback.button.shuf.2." downimage="playback.button.shuf.3." rectrgn="1" nstates="2" tooltip="Toggle Playlist Shuffling" cfgattrib="{45F3F7C1-A6F3-4EE6-A15E-125E92FC3F8D};Shuffle"/>
	<NStatesButton x="30" y="0" image="playback.button.rep.1." hoverimage="playback.button.rep.2." downimage="playback.button.rep.3." rectrgn="1" nstates="3" tooltip="Toggle Playlist/Song Repeating" cfgattrib="{45F3F7C1-A6F3-4EE6-A15E-125E92FC3F8D};Repeat" cfgvals="0;1;-1"/>
</groupdef>
<groupdef id="two.playback.buttons" w="224">
	<layer id="two.playback.buttons.left" x="0" y="0" image="playback.bg.buttons.left"/>
	<layer id="two.playback.buttons.right" x="157" y="0" image="playback.bg.buttons.right.1"/>
	<button x="7" y="0" action="PREV" image="playback.button.prev.1" hoverimage="playback.button.prev.2" downimage="playback.button.prev.3"/>
	<button id="two.playback.play" x="37" y="0" action="PLAY" image="playback.button.play.1" hoverimage="playback.button.play.2" downimage="playback.button.play.3"/>
	<button id="two.playback.paus" x="37" y="0" action="PAUSE" image="playback.button.paus.1" hoverimage="playback.button.paus.2" downimage="playback.button.paus.3"/>
	<button x="67" y="0" action="NEXT" image="playback.button.next.1" hoverimage="playback.button.next.2" downimage="playback.button.next.3"/>
	<button x="97" y="0" action="STOP" image="playback.button.stop.1" hoverimage="playback.button.stop.2" downimage="playback.button.stop.3"/>
	<button x="127" y="0" action="EJECT" image="playback.button.open.1" hoverimage="playback.button.open.2" downimage="playback.button.open.3"/>

	<group id="two.playback.buttons.volume" x="157" y="0" visible="0"/>
	<group id="two.playback.buttons.shufrep" x="157" y="0" visible="0"/>
</groupdef>
<groupdef id="two.playback" autoheightsource="two.playback.left">
	<layer id="two.playback.fill" x="0" y="0" w="0" relatw="1" image="playback.bg.fill" regionop="1"/>

	<layer id="two.playback.left" x="0" y="0" image="playback.bg.left.1" regionop="1"/>
	<layer id="two.playback.right" x="-83" y="0" relatx="1" image="playback.bg.right" regionop="1"/>

	<group id="two.playback.buttons" x="8" y="0" h="0" relath="1"/>


	<group id="two.playback.vis" x="0" y="0" h="0" relath="1" visible="1"/>
	<group id="two.playback.volume" x="0" y="0" h="0" relatx="1" relath="1" visible="0"/>

	<script file="scripts/playback-layout.maki"/>
</groupdef>
<groupdef id="two.screen">
	<group id="two.info" x="0" w="0" relatw="1"/>
	<group id="two.playback" x="0" y="40" w="0" relatw="1"/>
</groupdef>


