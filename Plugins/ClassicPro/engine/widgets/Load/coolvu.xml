<groupdef id="centro.widgets.coolvu.mini" name="Cool VU" userdata="centro.widgets.coolvu;0" windowtype="centro.widgets.mini" inherit_group="centro.widgets.coolvu.drawer" />

<elements>
    <bitmap id="centro.widgets.coolvu.thumbnail" file="@WINAMPPATH@\Plugins\classicPro\engine\widgets\Data\CoolVU\thumbnail.png"/>
</elements>




<elements>
    <bitmap id="neddleimg" file="@WINAMPPATH@\Plugins\classicPro\engine\widgets\Data\CoolVU\NEEDLE.PNG" gammagroup="color.display"/>
	<bitmap id="scaleimg" file="@WINAMPPATH@\Plugins\classicPro\engine\widgets\Data\CoolVU\SCALE.PNG" gammagroup="color.display"/>
</elements>

<groupdef id="centro.widgets.coolvu">
	<group id="coolvu.main.group" x="2" y="4" w="-4" h="-23" relatw="1" relath="1"/>
	<button id="settings" x="1" y="-18" relaty="1" image="component.menu.1" hoverimage="component.menu.2" downimage="component.menu.3" tooltip="Video Options"/>
	<script file="@WINAMPPATH@\Plugins\classicPro\engine\widgets\Data\CoolVU\coolvu.maki" param="needle/settings/2/42/0/0"/>
</groupdef>


<groupdef id="coolvu.main" w="164" h="130">
	<layer id="scale" image="scaleimg" x="0" y="0" ghost="1"/>
	<layer id="needle" image="neddleimg" x="-68" y="-23" ghost="1"/>
</groupdef>

<groupdef id="coolvu.main.group">
	<group id="coolvu.main" x="0" y="0"/>
	<script file="@WINAMPPATH@\Plugins\classicPro\engine\widgets\Data\CoolVU\sc_centerGroup.maki" param="coolvu.main;1;1;1"/>

