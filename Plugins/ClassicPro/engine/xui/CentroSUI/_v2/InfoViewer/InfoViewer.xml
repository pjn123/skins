<groupdef id="bento.infodisplay.line" embed_xui="text" xuitag="Centro:InfoLine">
	<!--<rect fitparent="1" color="0,255,0"/>-->
	<Text id="label" 
		fitparent="1"
		text="Error:" font="cpro2.font.fileinfo.text"
		color="cpro2.color.fileinfo.name" valign="top" alpha="253"
	/>

	<Text id="text" 
		fitparent="1" font="cpro2.font.fileinfo.text"
		color="cpro2.color.fileinfo.tag" valign="top" translate="0" alpha="253"
	/>

	<layer id="link" fitparent="1" rectrgn="1" move="1" alpha="253" dblclickaction="trackinfo"/>

	<script file="@WINAMPPATH@\Plugins\classicPro\engine\xui\CentroSUI\_v2\InfoViewer\infoline.maki" />
</groupdef>
<groupdef id="cpro2.tags.114" embed_xui="fileinfo.rating.text" >
